<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_screen"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg"
                android:theme="@style/AppMain"
                tools:context=".MainActivity">

    <!-- Include stats bar -->
    <include
        android:id="@+id/stats_bar"
        layout="@layout/stats_bar"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/options_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="right|top"
        android:layout_margin="20dp"
        app:fabSize="normal"
        android:src="@drawable/ic_games_white_36dp"
        app:backgroundTint="@color/colorAccent"
        app:elevation="4dp"
        />


    <!-- Main layout -->



    <!-- Include Actions toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>